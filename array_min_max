// Online C++ compiler to run C++ program online
#include <iostream>
#include <algorithm>
using namespace std;

int main() {
  int arr[] = {100, 200, 300, 200, 162, 161};
  //Calculate the number of elements in the array
    int n = sizeof(arr) / sizeof(arr[0]);
    std::cout <<"Received Data: ";
     for (int i = 0; i < n; i++) {
        std::cout << arr[i] << " ";
    }
    cout <<std::endl;
    int min= arr[0];
    int max= arr[0];
    int sum =0; 
    // find minand max in array
    for (int i = 0; i < n; i++) {
        if (min > arr[i] ) {
          min = arr[i];
        }
        if (max < arr[i] ) {
          max = arr[i];
        }
        sum += arr[i];
    }
    std::cout <<"Min: "<< min << " and Max: "<<max <<std::endl;
     std::cout <<"SUM: "<<sum <<std::endl;
  return 0;
}
